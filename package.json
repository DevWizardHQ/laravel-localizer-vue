{
  "name": "@devwizard/laravel-localizer-vue",
  "version": "1.0.1",
  "type": "module",
  "description": "Vue 3 integration for Laravel Localizer with Vite plugin, useLocalizer composable, and automatic TypeScript generation",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./vite": {
      "types": "./dist/vite-plugin.d.ts",
      "import": "./dist/vite-plugin.js",
      "require": "./dist/vite-plugin.js",
      "default": "./dist/vite-plugin.js"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "npm run type-check && npm run lint && npm run test && npm run build"
  },
  "keywords": [
    "laravel",
    "laravel-localizer",
    "laravel-localizer-vue",
    "vue",
    "vue3",
    "inertia",
    "inertiajs",
    "localization",
    "internationalization",
    "i18n",
    "l10n",
    "translations",
    "typescript",
    "vite",
    "vite-plugin",
    "spa",
    "composition-api",
    "devwizard"
  ],
  "author": {
    "name": "IQBAL HASAN",
    "email": "devwizard24@gmail.com",
    "url": "https://github.com/DevWizardHQ"
  },
  "license": "MIT",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/DevWizardHQ"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DevWizardHQ/laravel-localizer-vue.git",
    "directory": "packages/vue"
  },
  "bugs": {
    "url": "https://github.com/DevWizardHQ/laravel-localizer-vue/issues"
  },
  "homepage": "https://github.com/DevWizardHQ/laravel-localizer-vue#readme",
  "peerDependencies": {
    "@inertiajs/vue3": "^1.0.0 || ^2.0.0",
    "vite": "^5.0.0 || ^6.0.0 || ^7.0.0",
    "vue": "^3.0.0"
  },
  "dependencies": {
    "minimatch": "^10.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^24.10.0",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.39.1",
    "eslint-plugin-vue": "^10.5.1",
    "jsdom": "^27.1.0",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.41.0",
    "vite": "^7.2.2",
    "vitest": "^4.0.8",
    "vue": "^3.5.13",
    "vue-eslint-parser": "^10.2.0"
  }
}
